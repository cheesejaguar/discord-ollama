# Discord token for the bot
CLIENT_TOKEN = BOT_TOKEN

# Default model for new users
MODEL = DEFAULT_MODEL

# Ollama connection settings
# For existing Ollama on host machine: use 127.0.0.1 (with host networking)
# For Docker Desktop (Mac/Windows): use host.docker.internal
# For separate Ollama server: use the server's IP address
OLLAMA_IP = 127.0.0.1
OLLAMA_PORT = 11434

# Optional: API key for Ollama authentication (e.g., OpenWebUI)
# If your Ollama instance requires authentication, set this to your API key
# The key will be sent as: Authorization: Bearer <your-api-key>
# OLLAMA_API_KEY = your-api-key-here
